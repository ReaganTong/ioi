<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobile_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:mobile_app.Views">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
            Title="Lessons"
            ContentTemplate="{DataTemplate views:LessonDetailPage}" />
        <ShellContent
            Title="Quiz"
            ContentTemplate="{DataTemplate views:QuizPage}" />
        <ShellContent
            Title="More"
            ContentTemplate="{DataTemplate views:MorePage}" />
    </TabBar>
</Shell>
