<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobile_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:mobile_app.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Anti-Bully App">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home_icon.png" 
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="Home" />

        <ShellContent
            Title="Learn"
            Icon="book_icon.png"
            ContentTemplate="{DataTemplate views:LessonsPage}"
            Route="Lessons" />

        <ShellContent
            Title="Quizzes"
            Icon="quiz_icon.png"
            ContentTemplate="{DataTemplate views:QuizPage}"
            Route="Quizzes" />

        <ShellContent
            Title="Get Help"
            Icon="support_icon.png"
            ContentTemplate="{DataTemplate views:HelpPage}"
            Route="Help" />

        <ShellContent
            Title="More"
            Icon="more_icon.png"
            ContentTemplate="{DataTemplate views:MorePage}"
            Route="More" />

    </TabBar>

</Shell>