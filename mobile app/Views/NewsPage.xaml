<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:mobile_app.ViewModels"
             xmlns:models="clr-namespace:mobile_app.Models"
             x:Class="mobile_app.Views.NewsPage"
             Title="Campus Awareness Feed">

    <RefreshView Command="{Binding RefreshCommand}">
        <CollectionView ItemsSource="{Binding NewsList}">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No news at the moment." TextColor="Gray" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:NewsModel">
                    <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True" BorderColor="#EEEEEE">
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="📢" FontSize="20"/>
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource PrimaryColor}"/>
                            </HorizontalStackLayout>

                            <Label Text="{Binding CreatedAt, StringFormat='{0:MMMM dd, hh:mm tt}'}" 
                                   FontSize="11" TextColor="Gray"/>

                            <Label Text="{Binding Description}" 
                                   FontSize="14" TextColor="#444" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>