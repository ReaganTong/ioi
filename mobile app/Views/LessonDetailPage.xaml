<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_app.Views.LessonDetailPage"
             Title="Lesson Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="{Binding Title}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="{Binding Color}"
                   CornerRadius="50"
                   Padding="20"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   HasShadow="False">
                <Label Text="{Binding Icon}"
                       FontSize="48"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <Label Text="What is it?" FontSize="20" FontAttributes="Bold" />
            <Frame BorderColor="{StaticResource Gray200}" CornerRadius="10" Padding="15" HasShadow="True">
                <Label Text="{Binding LongDefinition}" FontSize="14" LineBreakMode="WordWrap" />
            </Frame>

            <Label Text="Common Examples" FontSize="20" FontAttributes="Bold" />
            <Frame BorderColor="{StaticResource Gray200}" CornerRadius="10" Padding="15" HasShadow="True">
                <CollectionView ItemsSource="{Binding Examples}" HeightRequest="150">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="14" Margin="0,5" TextColor="#555" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <Label Text="What You Can Do" FontSize="20" FontAttributes="Bold" />
            <Frame BackgroundColor="{StaticResource SafeGreen}" CornerRadius="10" Padding="15" HasShadow="True">
                <CollectionView ItemsSource="{Binding ActionSteps}" HeightRequest="120">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="14" TextColor="White" Margin="0,5" FontAttributes="Bold"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <Button Text="📞 Get Help Now"
                    BackgroundColor="{StaticResource AlertRed}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnGetHelpClicked" />

            <Button Text="✅ Mark as Complete"
                    BackgroundColor="{StaticResource SafeGreen}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="18" 
                    Clicked="OnMarkCompleteClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>