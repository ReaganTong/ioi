<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:mobile_app.ViewModels"
             x:Class="mobile_app.Views.ReportPage"
             Title="Report Incident">

    <ScrollView>
        <VerticalStackLayout Padding="20" 
                             Spacing="15" 
                             BackgroundColor="Transparent" 
                             VerticalOptions="Fill">

            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackgroundClicked" />
            </VerticalStackLayout.GestureRecognizers>

            <Button Text="📞 Call UTS Security" 
                    Command="{Binding CallSecurityCommand}" 
                    BackgroundColor="#F44336" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    HeightRequest="50" 
                    CornerRadius="25" 
                    Margin="0,0,0,10"/>

            <Label Text="Report an Incident" FontSize="24" FontAttributes="Bold" />

            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <Editor x:Name="DescriptionEditor" 
                        Placeholder="Describe what happened..." 
                        Text="{Binding Description}" 
                        HeightRequest="100" />
            </Frame>

            <Label Text="Evidence (Photos/Videos)" FontSize="16" FontAttributes="Bold" />

            <Button Text="📷 Add Photo or Video" 
                    Command="{Binding PickMediaCommand}" 
                    BackgroundColor="{StaticResource SecondaryColor}" 
                    TextColor="Black" />

            <CollectionView ItemsSource="{Binding Attachments}" 
                            HeightRequest="120" 
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame WidthRequest="100" HeightRequest="100" Padding="0" CornerRadius="8" IsClippedToBounds="True" BorderColor="Gray">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ReportViewModel}}, Path=PreviewAttachmentCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid>
                                <Image Source="{Binding PreviewSource}" Aspect="AspectFill" />

                                <Label Text="▶️" FontSize="24" IsVisible="{Binding IsVideo}"
                                       HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontAttributes="Bold"/>

                                <ImageButton Source="dotnet_bot.png" 
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ReportViewModel}}, Path=RemoveAttachmentCommand}"
                                             CommandParameter="{Binding .}"
                                             HorizontalOptions="End" VerticalOptions="Start" 
                                             WidthRequest="25" HeightRequest="25" Margin="5"
                                             BackgroundColor="Red" CornerRadius="12"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="{Binding LocationLabel}" FontSize="12" TextColor="Blue" />

            <Button Text="📍 Get My Location" Command="{Binding GetCurrentLocationCommand}" BackgroundColor="{StaticResource CalmBlue}" TextColor="White" />

            <Label Text="Tap Map to Pin Location" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>

            <Frame HeightRequest="300" Padding="0" CornerRadius="10" IsClippedToBounds="True">
                <WebView x:Name="NasaWebView" 
                         HorizontalOptions="Fill"
                         VerticalOptions="Fill" 
                         Navigating="OnMapNavigating"/>
            </Frame>

            <Button Text="Submit Report" Command="{Binding SubmitReportCommand}" BackgroundColor="{StaticResource AlertRed}" CornerRadius="25" HeightRequest="50" FontSize="18" FontAttributes="Bold" Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>