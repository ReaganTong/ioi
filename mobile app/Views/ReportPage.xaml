<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:vm="clr-namespace:mobile_app.ViewModels"
             x:Class="mobile_app.Views.ReportPage"
             Title="Report Incident">

    <ContentPage.BindingContext>
        <vm:ReportViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Button Text="📞 Call UTS Security"
                    Command="{Binding CallSecurityCommand}"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,0,10"/>

            <Label Text="Report an Incident" FontSize="24" FontAttributes="Bold" />
            <Label Text="Tap the map to set the location." FontSize="14" TextColor="Gray" />

            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <Editor Placeholder="Describe what happened..." 
                        Text="{Binding Description}"
                        HeightRequest="100" />
            </Frame>

            <Button Text="📷 Attach Photo Evidence"
                Command="{Binding PickPhotoCommand}" 
                BackgroundColor="{StaticResource SecondaryColor}" 
                TextColor="Black" />

            <Image Source="{Binding EvidenceImage}" 
                   HeightRequest="200" 
                   Aspect="AspectFit" 
                   IsVisible="{Binding EvidenceImage, Converter={StaticResource IsNotNullConverter}}" />

            <Label Text="{Binding LocationLabel}" FontSize="12" TextColor="Blue" />

            <Frame HeightRequest="300" Padding="0" CornerRadius="10" IsClippedToBounds="True">
                <mapsui:MapView x:Name="MyMap"
                                IsMyLocationButtonVisible="False"
                                IsNorthingButtonVisible="False"
                                IsZoomButtonVisible="True" />
            </Frame>

            <Button Text="Submit Report" 
                    Command="{Binding SubmitReportCommand}" 
                    BackgroundColor="{StaticResource AlertRed}" 
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>