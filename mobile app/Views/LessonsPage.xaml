<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_app.Views.LessonsPage"
             xmlns:viewmodels="clr-namespace:mobile_app.ViewModels"
             Title="Educational Hub">

    <ContentPage.BindingContext>
        <viewmodels:LessonViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Types of Bullying" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   Margin="20, 20, 20, 0" 
                   TextColor="{StaticResource TextColor}" />

            <Label Text="Educate yourself and recognize bullying behaviours."
                   FontSize="14"
                   Margin="20, 5, 20, 15" 
                   TextColor="{StaticResource Gray600}" />

            <CollectionView ItemsSource="{Binding Lessons}"
                            SelectionMode="None"
                            Margin="10, 0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrameStyle}" 
               Margin="10, 5"
               BackgroundColor="{Binding Color}"
               Padding="0">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LessonViewModel}}, Path=GoToDetailsCommand}"
                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="70, *" Padding="15">
                                <Label Text="{Binding Icon}" 
                       FontSize="40" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                                    <Label Text="{Binding Title}" 
                           FontAttributes="Bold" 
                           FontSize="18" 
                           TextColor="White" />
                                    <Label Text="{Binding ShortDescription}" 
                           FontSize="13" 
                           TextColor="#F0F0F0" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>