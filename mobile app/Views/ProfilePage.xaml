<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:mobile_app.ViewModels"
             x:Class="mobile_app.Views.ProfilePage"
             Title="My Profile">

    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <VerticalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,20,0,10">
                <Frame HeightRequest="100" WidthRequest="100" CornerRadius="50" Padding="0" IsClippedToBounds="True" BorderColor="{StaticResource PrimaryColor}">
                    <Image Source="dotnet_bot.png" Aspect="AspectFill" />
                </Frame>
                <Label Text="{Binding UserName}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Text="{Binding StudentId}" FontSize="14" TextColor="Gray" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Frame BackgroundColor="{StaticResource CalmBlue}" Padding="15" CornerRadius="15">
                    <VerticalStackLayout>
                        <Label Text="{Binding QuizzesCompleted}" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                        <Label Text="Quizzes Done" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="{StaticResource AlertRed}" Padding="15" CornerRadius="15" Grid.Column="1">
                    <VerticalStackLayout>
                        <Label Text="{Binding ReportsSubmitted}" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                        <Label Text="Reports Sent" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Frame CornerRadius="10" Padding="0" BorderColor="LightGray">
                <VerticalStackLayout Padding="15" Spacing="15">
                    <Label Text="Account Details" FontAttributes="Bold" FontSize="16" />

                    <VerticalStackLayout>
                        <Label Text="Email" TextColor="Gray" FontSize="12" />
                        <Label Text="{Binding UserEmail}" FontSize="16" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="LightGray" />

                    <VerticalStackLayout>
                        <Label Text="Campus" TextColor="Gray" FontSize="12" />
                        <Label Text="UTS Sibu" FontSize="16" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Logout" 
                    Command="{Binding LogoutCommand}" 
                    BackgroundColor="{StaticResource AlertRed}" 
                    TextColor="White"
                    CornerRadius="25"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>