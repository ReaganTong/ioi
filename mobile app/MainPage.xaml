<ContentPage
    x:Class="mobile_app.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">

    <VerticalStackLayout
        Padding="30"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label 
            Text="Welcome to Anti-Bully App!"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Button 
            Text="Start Learning"
            Margin="0,20,0,0"
            Clicked="OnStartClicked" />
    </VerticalStackLayout>
</ContentPage>
